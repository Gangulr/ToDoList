<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".TimerStopwatchActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/timer_stopwatch_header"
        android:textSize="24sp"
        android:textColor="@color/primaryTextColor"
        android:padding="16dp"
        android:background="@drawable/header_background"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:shadowColor="@color/shadowColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Timer UI Elements -->
    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timer: 00:00"
        android:textSize="32sp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btnStartTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Timer"
        android:background="@drawable/button_background"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintTop_toBottomOf="@id/txtTimer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnStopTimer"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnStopTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Timer"
        android:background="@drawable/button_background"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintTop_toBottomOf="@id/txtTimer"
        app:layout_constraintStart_toEndOf="@id/btnStartTimer"
        app:layout_constraintEnd_toStartOf="@id/btnResetTimer"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnResetTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Timer"
        android:background="@drawable/button_background"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintTop_toBottomOf="@id/txtTimer"
        app:layout_constraintStart_toEndOf="@id/btnStopTimer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Stopwatch UI Elements -->
    <TextView
        android:id="@+id/txtStopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stopwatch: 00:00:00"
        android:textSize="32sp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnStartTimer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/btnStartStopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:background="@drawable/button_background"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintTop_toBottomOf="@id/txtStopwatch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnStopStopwatch"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnStopStopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:background="@drawable/button_background"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintTop_toBottomOf="@id/txtStopwatch"
        app:layout_constraintStart_toEndOf="@id/btnStartStopwatch"
        app:layout_constraintEnd_toStartOf="@id/btnResetStopwatch"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnResetStopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:background="@drawable/button_background"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintTop_toBottomOf="@id/txtStopwatch"
        app:layout_constraintStart_toEndOf="@id/btnStopStopwatch"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Task List Icon -->
        <ImageView
            android:id="@+id/navTaskList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:contentDescription="@string/task_list"
            android:padding="12dp"
            android:src="@drawable/ic_task_list"/>

        <!-- Timer/Stopwatch Icon -->
        <ImageView
            android:id="@+id/navTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:contentDescription="@string/timer_stopwatch"
            android:padding="12dp"
            android:src="@drawable/ic_timer"/>

        <!-- Reminder Icon -->
        <ImageView
            android:id="@+id/navReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:contentDescription="@string/reminder"
            android:padding="12dp"
            android:src="@drawable/ic_reminder"/>

        <!-- Home Icon -->
        <ImageView
            android:id="@+id/navHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/home"
            android:padding="12dp"
            android:src="@drawable/ic_home"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
