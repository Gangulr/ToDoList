<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/header_background"
        android:padding="16dp"
        android:gravity="center"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD REMINDER"
            android:textSize="26sp"
            android:textColor="@color/primaryTextColor"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:gravity="center"
            android:textAllCaps="true"/>
    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@id/headerLayout"
        android:layout_above="@id/navBar">

        <EditText
            android:id="@+id/edtReminderMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_reminder_message"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_text_color"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtSelectDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_date"
            android:paddingTop="16dp"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:background="@drawable/textview_background"
            android:padding="12dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtSelectTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_time"
            android:paddingTop="16dp"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:background="@drawable/textview_background"
            android:padding="12dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnCreateReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_reminder"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        android:padding="8dp"
        android:gravity="center">

        <!-- Task List Icon -->
        <ImageView
            android:id="@+id/navTaskList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:contentDescription="@string/task_list"
            android:padding="12dp"
            android:src="@drawable/ic_task_list"
            android:layout_gravity="center_vertical" />

        <!-- Timer/Stopwatch Icon -->
        <ImageView
            android:id="@+id/navTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:contentDescription="@string/timer_stopwatch"
            android:padding="12dp"
            android:src="@drawable/ic_timer"
            android:layout_gravity="center_vertical" />

        <!-- Reminder Icon -->
        <ImageView
            android:id="@+id/navReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:contentDescription="@string/reminder"
            android:padding="12dp"
            android:src="@drawable/ic_reminder"
            android:layout_gravity="center_vertical" />

        <!-- Home Icon -->
        <ImageView
            android:id="@+id/navHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/home"
            android:padding="12dp"
            android:src="@drawable/ic_home"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</RelativeLayout>
