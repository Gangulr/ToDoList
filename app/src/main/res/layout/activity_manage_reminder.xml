<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header Label -->
    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR REMINDER"
        android:textSize="26sp"
        android:textColor="@color/primaryTextColor"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:padding="16dp"
        android:background="@drawable/header_background"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:contentDescription="@string/your_reminder_header"
        android:letterSpacing="0.1"
        android:textAllCaps="true"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_marginTop="16dp"/>


    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@+id/txtHeader"
        android:layout_above="@+id/navBar">

        <!-- Reminder Message Input -->
        <EditText
            android:id="@+id/edtReminderMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:contentDescription="@string/enter_reminder_message"
            android:hint="@string/enter_reminder_message"
            android:importantForAccessibility="yes"
            android:padding="12dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_text_color"
            android:textSize="16sp" />

        <!-- Select Date Label -->
        <TextView
            android:id="@+id/txtSelectDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_date"
            android:padding="12dp"
            android:background="@drawable/textview_background"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:importantForAccessibility="yes"
            android:contentDescription="@string/select_date"/>

        <!-- Select Time Label -->
        <TextView
            android:id="@+id/txtSelectTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_time"
            android:padding="12dp"
            android:background="@drawable/textview_background"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:importantForAccessibility="yes"
            android:contentDescription="@string/select_time"/>

        <!-- Update Reminder Button -->
        <Button
            android:id="@+id/btnUpdateReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_reminder"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- Delete Reminder Button -->
        <Button
            android:id="@+id/btnDeleteReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_reminder"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        android:padding="8dp"
        android:gravity="center">

        <!-- Task List Icon -->
        <ImageView
            android:id="@+id/navTaskList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:contentDescription="@string/task_list"
            android:padding="12dp"
            android:src="@drawable/ic_task_list"
            android:layout_gravity="center_vertical" />

        <!-- Timer/Stopwatch Icon -->
        <ImageView
            android:id="@+id/navTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:contentDescription="@string/timer_stopwatch"
            android:padding="12dp"
            android:src="@drawable/ic_timer"
            android:layout_gravity="center_vertical" />

        <!-- Reminder Icon -->
        <ImageView
            android:id="@+id/navReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:contentDescription="@string/reminder"
            android:padding="12dp"
            android:src="@drawable/ic_reminder"
            android:layout_gravity="center_vertical" />

        <!-- Home Icon -->
        <ImageView
            android:id="@+id/navHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/home"
            android:padding="12dp"
            android:src="@drawable/ic_home"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</RelativeLayout>
