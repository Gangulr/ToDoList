<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <gradient
        android:startColor="@color/button_color_light"
        android:endColor="@color/button_color_dark"
        android:angle="45"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Border stroke -->
    <stroke
        android:width="2dp"
        android:color="@color/button_color"/>

    <!-- Padding inside the shape -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>
